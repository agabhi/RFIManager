<?xml version="1.0"?>
 <!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 <hibernate-mapping>
   <class name="com.model.rfi.ExpandedRFI">
   
   <composite-id>
		<key-property name="rfi_id"/>
		<key-property name="approval_id"/>
	</composite-id>
    
    <property name="rfiNumber">
   	<column name="rfi_number"/>
   </property>
   
   <property name="rfiCode">
		   	<column name="rfi_code"/>
   </property>
   
   <property name="fromChainage">
   	<column name="from_chainage"/>
   </property>
   <property name="toChainage">
   	<column name="to_chainage"/>
   </property>
   
   
   <property name="side">
   	<column name="side"/>
   </property>
   
   <property name="activity">
   	<column name="activity"/>
   </property>
   
   <property name="layer">
   	<column name="layer"/>
   </property>
   <property name="itemDescription">
   	<column name="item_description"/>
   </property>
   
   <property name="boqNumber">
   	<column name="boq_number"/>
   </property>
   
   <!-- 
   <many-to-one name="side" class="com.model.rfi.Side" column="side"/>
   <many-to-one name="workItem" class="com.model.rfi.WorkItem" column="boq_item_id"/>
   <many-to-one name="layer" class="com.model.rfi.Layer" column="layer"/>
    -->
   
   <property name="remarks">
   	<column name="remarks"/>
   </property>
   
   <property name="wiRemarks">
   	<column name="wi_remarks"/>
   </property>
   
   <property name="issueDate">
   	<column name="issue_date"/>
   </property>
   
   <property name="billNumber">
   	<column name="bill_number"/>
   </property>
   
   
   <property name="inspectionDate">
   	<column name="inspection_date"/>
   </property>
   <property name="createdByUserName">
   	<column name="created_by_username"/>
   </property>
   <property name="lastEditedByUserName">
   	<column name="last_edited_by_username"/>
   </property>
   <property name="status">
   	<column name="status"/>
   </property>
   <property name="grade">
   	<column name="grade"/>
   </property>
   
   
    <property name="approvedFrom" column="approved_from"/>
		<property name="approvedTo" column="approved_to"/>
		   <property name="approvedSide">
   	<column name="approved_side"/>
   </property>
   
   <property name="approvedLayer">
   	<column name="approved_layer"/>
   </property>
  <property name="approvalDate">
   	<column name="approval_date"/>
   </property>
   
   <property name="breadth">
   	<column name="breadth"/>
   </property>
   
   <property name="depth">
   	<column name="depth"/>
   </property>
   
   <property name="area">
   	<column name="area"/>
   </property>
   
   <property name="quantity">
   	<column name="quantity"/>
   </property>
   
  </class>
  
 </hibernate-mapping>